#!/usr/bin/node

const size = parseInt(Number(process.argv[2]));
if (!size) {
  console.log('Missing size');
} else {
  let character = 'X';
  let isdone = false;
  for (let i = 0; i < size; i++) {
    for (let j = 0; j < (size - 1) && !isdone; j++) {
      character = character + 'X';
    }
      if (isdone === false)
	  isdone = true;
    console.log(character);
  }
}
